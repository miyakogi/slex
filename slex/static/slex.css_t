/* -- general body styles --------------------------------------------------- */

/* Main layout */

div.document {
    margin: 10px auto 0 auto;
    padding: 0 30px 0 30px;
    max-width: {{ theme_page_width }};
    display: flex;
}

div.documentwrapper {
    width: 100%;
}

div.footer {
    margin: 20px auto 30px auto;
    max-width: {{ theme_page_width }};
    font-size: 14px;
    text-align: right;
}

div.sphinxsidebar {
    min-width: {{ theme_sidebar_width }};
    max-width: {{ theme_sidebar_width }};
    margin-right: 30px;
    display: flex;
}

@media screen and (max-width:  {{ theme_page_width }}) {
  div.document {
    flex-direction: column-reverse;
  }

  div.sphinxsidebar {
    width: auto;
  }

  .github {
    display: none;
  }
}

html, body {
    font-size: 17px;
    font-family: serif;
}

.align-left {
    text-align: left;
}

.align-center {
    text-align: center;
}

.align-right {
    text-align: right;
}

h1 {
    font-size: 3.5rem;
}

h2 {
    font-size: 2.75rem;
}

h3 {
    font-size: 2.25rem;
}

h4 {
    font-size: 1.9rem;
}

h5 {
    font-size: 1.75rem;
}

h5 {
    font-size: 1.5rem;
}

h1, h2, h3, h4, h5, h6 {
    margin-top: 0.2em;
    margin-bottom: 0.2em;
    font-family: sans-serif;
}

p {
    margin-bottom: 1em;
}

ul, ol, dd {
    margin-left: 2rem;
}

/* latest firefox button is something wide */
button, input {
    font-family: monospace;
    margin: 0;
    padding: 0;
    border-color: #ccc;
    border-width: 1px;
    border-style: solid;
}

button, input[type=submit], input[type=button] {
    background-color: #f7f7f7;
}

/* link colors */

a:link {
    color: #3480c0;
}

a:visited {
    color: #644090;
}

a:hover {
    color: #34a0c0;
}

/* header link */
a.headerlink {
  margin-left: 0.2em;
  font-size: 80%;
  color: rgba(0, 0, 0, 0.05);
}

a.headerlink:hover {
  color: rgba(0, 0, 0, 0.15);
}


/* -- figures --------------------------------------------------------------- */

img {
    border: 0;
    max-width: 100%;
}

img.align-left, .figure.align-left, object.align-left {
    clear: left;
    float: left;
    margin-right: 1em;
}

img.align-right, .figure.align-right, object.align-right {
    clear: right;
    float: right;
    margin-left: 1em;
}

img.align-center, .figure.align-center, object.align-center {
    display: block;
    margin-left: auto;
    margin-right: auto;
}

/* Don't put an underline on images */
a.image-reference, a.image-reference:hover {
    border-bottom: none;
}
div.figure {
    margin: 0.5em;
    padding: 0.5em;
}

div.figure p.caption {
    padding: 0.3em;
}

div.figure p.caption span.caption-number {
    font-style: italic;
}

/* -- index page ------------------------------------------------------------ */

table.contentstable {
    width: 90%;
}

table.contentstable p.biglink {
    line-height: 150%;
}

a.biglink {
    font-size: 1.3em;
}

span.linkdescr {
    font-style: italic;
    padding-top: 5px;
    font-size: 90%;
}

/* -- general index --------------------------------------------------------- */

table.indextable {
    width: 100%;
}

table.indextable td {
    text-align: left;
    /* vertical-align: top; */
}

table.indextable dl, table.indextable dd {
    margin-top: 0;
    margin-bottom: 0;
}

table.indextable tr.pcap {
    height: 10px;
}

table.indextable tr.cap {
    margin-top: 10px;
    background-color: #f2f2f2;
}

img.toggler {
    margin-right: 3px;
    margin-top: 3px;
    cursor: pointer;
}

div.modindex-jumpbox {
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    margin: 1em 0 1em 0;
    padding: 0.4em;
}

div.genindex-jumpbox {
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    margin: 1em 0 1em 0;
    padding: 0.4em;
}

/* -- search page ----------------------------------------------------------- */

ul.search {
    margin: 10px 0 0 20px;
    padding: 0;
}

ul.search li {
    padding: 5px 0 5px 20px;
    background-image: url(file.png);
    background-repeat: no-repeat;
    background-position: 0 7px;
}

ul.search li a {
    font-weight: bold;
}

ul.search li div.context {
    color: #888;
    margin: 2px 0 0 30px;
    text-align: left;
}

ul.keywordmatches li.goodmatch a {
    font-weight: bold;
}

/* -- for definitions ------------------------------------------------------- */
dl.class dd, dl.function dd {
  margin-left: 30px;
}

/* -- admonitions ----------------------------------------------------------- */

div.admonition {
    margin-top: 10px;
    margin-bottom: 10px;
    padding: 7px;
}

div.admonition dt {
    font-weight: bold;
}

div.admonition dl {
    margin-bottom: 0;
}

p.admonition-title {
    margin: 0px 10px 5px 0px;
    font-weight: bold;
}

div.body p.centered {
    text-align: center;
    margin-top: 25px;
}

div.admonition {
    margin: 20px 0px;
    padding: 10px 30px;
    background-color: {{ theme_warn_bg }};
    border: 1px solid {{ theme_warn_border }};
}

div.admonition tt.xref, div.admonition a tt {
    border-bottom: 1px solid #fafafa;
}

dd div.admonition {
    margin-left: -60px;
    padding-left: 60px;
}

div.admonition p.admonition-title {
    font-weight: normal;
    font-size: 1.5rem;
}

div.admonition p.last {
    margin-bottom: 0;
}

div.note {
    background-color: {{ theme_note_bg }};
    border: 1px solid {{ theme_note_border }};
}

div.seealso {
    background-color: {{ theme_seealso_bg }};
    border: 1px solid {{ theme_seealso_border }};
}

p.admonition-title:after {
    content: ":";
}

/* -- topics ---------------------------------------------------------------- */
/* What is topic...? */

div.topic {
    border: 1px solid #ccc;
    padding: 7px 7px 0 7px;
    margin: 10px 0 10px 0;
}

p.topic-title {
    font-size: 1.1em;
    font-weight: bold;
    margin-top: 10px;
}

div.topic {
    background-color: #eee;
}

/* -- relbar ---------------------------------------------------------------- */

div.related {
    width: 100%;
    font-size: 90%;
    display: flex;
}

div.related h3 {
    display: none;
}

div.related ul {
    margin: 0;
    padding: 0 0 0 10px;
    list-style: none;
}

div.related li {
    display: inline;
}

div.related li.right {
    float: right;
    margin-right: 5px;
}

/* -- sidebar --------------------------------------------------------------- */

div.sphinxsidebarwrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
}

div.sphinxsidebar ul {
    margin: 0;
    padding: 0;
}

div.sphinxsidebar ul, div.sphinxsidebar li {
    list-style: none;
}

div.sphinxsidebar ul ul {
    margin-top: 0;
    margin-bottom: 0;
}

div.sphinxsidebar li {
    margin-top: 0.3rem;
    margin-bottom: 0.3rem;
}

div.sphinxsidebar ul li {
    padding-left: 0.7rem;
}

div.sphinxsidebar form {
    margin-top: 10px;
}

{% if theme_show_related|lower == 'false' %}
div.relations {
    display: none;
}
{% endif %}

div.sphinxsidebar a {
    text-decoration: none;
}

div.sphinxsidebarwrapper h1.logo {
    margin-bottom: 5px;
}

div.sphinxsidebarwrapper h1.logo > a {
    color: #333;
}

div.sphinxsidebarwrapper h1.logo-name {
    margin-top: 0px;
}

div.sphinxsidebarwrapper p.blurb {
    margin-top: 0;
}

div.sphinxsidebar h3,
div.sphinxsidebar h4 {
    font-size: 1.5rem;
    font-weight: normal;
    margin: 0;
    margin-bottom: 5px;
    padding: 0;
}

div.sphinxsidebar h4 {
    font-size: 1.2rem;
}

div.sphinxsidebar p.logo a,
div.sphinxsidebar h3 a,
div.sphinxsidebar p.logo a:hover,
div.sphinxsidebar h3 a:hover {
    border: none;
}

div.sphinxsidebar ul li.toctree-l1 > a {
    font-size: 1.15rem;
}

div.sphinxsidebar ul li.toctree-l2 > a {
    font-size: 1.05rem;
}

div.sphinxsidebar hr {
    border: none;
    height: 1px;
    text-align: left;
    margin-left: 0;
    width: 50%;
}

div.searchbox {
    padding-top: 1rem;
    width: 100%;
}

div.search-container {
    display: flex;
    flex-direction: row;
    width: 100%;
}

input.search-input {
    align-self: stretch;
    margin: 0;
    line-height: normal;
}

div.sphinxsidebarwrapper input.search-input {
    line-height: normal;
    width: 100%;
}

button.search-btn, input.search-btn {
    align-self: stretch;
    margin: 0;
    padding: 0 1em;
    line-height: normal;
}

a.github-mark {
    margin-bottom: 10px;
}

/* -- other body styles ----------------------------------------------------- */

dl.glossary dt {
    font-weight: bold;
    font-size: 1.1em;
}

.field-list ul {
    margin: 0;
    padding-left: 1em;
}

.field-list p {
    margin: 0;
}

table.field-list th {
    padding: 0 0.8rem;
}


/* Disable valign="top" inserted by docutils */
tr.field {
    display: flex;
    align-items: stretch;
    line-height: normal;
}

th.field-name {
    display: flex;
    align-items: stretch;
    margin: 0;
    padding: 0;
    line-height: normal;
}

td.field-body {
    display: flex;
    align-items: flex-end;
    margin: 0;
    padding: 0;
    line-height: normal;
}

table.field-list p {
    margin-bottom: 0.8em;
}

.optional {
    font-size: 1.3em;
}

.sig-paren {
    margin-left: 2px;
    margin-right: 2px;
}

code+.sig-paren {
    padding-left: 2px;
    margin-right: 0px;
}

.versionmodified {
    font-style: italic;
}

.system-message {
    background-color: #fda;
    padding: 5px;
    border: 3px solid red;
}

.footnote:target  {
    background-color: #ffa;
}

table.footnote {
    border: none;
    -moz-box-shadow: none;
    -webkit-box-shadow: none;
    box-shadow: none;
}

table.footnote {
    margin: 15px 0;
    width: 100%;
    border: 1px solid {{ theme_footnote_border }};
    background: {{ theme_footnote_bg }};
    font-size: 0.9em;
}

table.footnote + table.footnote {
    margin-top: -15px;
    border-top: none;
}

table.footnote td.label {
    width: .1px;
    padding: 0.3em 0 0.3em 0.5em;
}

table.footnote td {
    padding: 0.3em 0.5em;
}

a.footnote-reference {
    text-decoration: none;
    font-size: 0.7em;
    vertical-align: top;
}

.line-block {
    display: block;
    margin-top: 1em;
    margin-bottom: 1em;
}

.line-block .line-block {
    margin-top: 0;
    margin-bottom: 0;
    margin-left: 1.5em;
}

.guilabel, .menuselection {
    font-family: sans-serif;
}

abbr, acronym {
    border-bottom: dotted 1px;
    cursor: help;
}

/* -- code displays --------------------------------------------------------- */

pre {
    overflow: auto;
    overflow-y: hidden;  /* fixes display issues on Chrome browsers */
    padding: 0.5em;
    margin-bottom: 1em;
}

code {
    vertical-align: baseline;
}

pre, code {
    background-color: #f6f6f6;
}

td.linenos pre {
    padding: 5px 0px;
    border: 0;
    background-color: transparent;
}

table.highlighttable {
    margin-left: 0.5em;
}

table.highlighttable td {
    padding: 0 0.5em 0 0.5em;
}

div.code-block-caption {
    padding: 2px 5px;
    font-size: small;
}

div.code-block-caption code {
    background-color: transparent;
}

div.code-block-caption + div > div.highlight > pre {
    margin-top: 0;
}

div.code-block-caption span.caption-number {
    padding: 0.1em 0.3em;
    font-style: italic;
}

div.literal-block-wrapper {
    padding: 1em 1em 0;
}

div.literal-block-wrapper div.highlight {
    margin: 0;
}

code.descname {
    font-weight: bold;
}

code.xref, a code {
    background-color: transparent;
    font-weight: bold;
}

h1 code, h2 code, h3 code, h4 code, h5 code, h6 code {
    background-color: transparent;
}

.viewcode-link {
    float: right;
}

.viewcode-back {
    float: right;
    font-family: sans-serif;
}

div.viewcode-block:target {
    margin: -1px -10px;
    padding: 0 10px;
}

/* -- math display ---------------------------------------------------------- */

img.math {
    vertical-align: middle;
}

div.body div.math p {
    text-align: center;
}

span.eqno {
    float: right;
}

/* -- printout stylesheet --------------------------------------------------- */

@media print {
    div.document,
    div.documentwrapper,
    div.bodywrapper {
        margin: 0 !important;
        width: 100%;
    }

    div.sphinxsidebar,
    div.related,
    div.footer,
    #top-link {
        display: none;
    }
}


/* -- body styles ----------------------------------------------------------- */

/* misc. */

.revsys-inline {
    display: none!important;
}

/* Make nested-list/multi-paragraph items look better in Releases changelog
 * pages. Without this, docutils' magical list fuckery causes inconsistent
 * formatting between different release sub-lists.
 */
div#changelog > div.section > ul > li > p:only-child {
    margin-bottom: 0;
}

/* Hide fugly table cell borders in ..bibliography:: directive output */
table.docutils.citation, table.docutils.citation td, table.docutils.citation th {
  border: none;
  /* Below needed in some edge cases; if not applied, bottom shadows appear */
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
}
